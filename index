        // DOM elements
        const homepage = document.getElementById('homepage');
        const practicePage = document.getElementById('practicePage');
        const resultsPage = document.getElementById('resultsPage');
        const practiceErrorsBtn = document.getElementById('practiceErrorsBtn');
        const startPracticeBtn = document.getElementById('startPracticeBtn');
        const nextBtn = document.getElementById('nextBtn');
        const submitBtn = document.getElementById('submitBtn');
        const questionContainer = document.getElementById('questionContainer');
        const progressFill = document.getElementById('progressFill');

        // Initialize app
        function init() {
            loadErrorCount();
            setupEventListeners();
        }

        function setupEventListeners() {
            practiceErrorsBtn.addEventListener('click', startErrorPractice);
            document.getElementById('practiceErrorsFromResults').addEventListener('click', startErrorPractice);
            startPracticeBtn.addEventListener('click', startRegularPractice);
            nextBtn.addEventListener('click', nextQuestion);
            submitBtn.addEventListener('click', submitAnswer);
            document.getElementById('backToHomeBtn').addEventListener('click', showHomepage);
        }

        function loadErrorCount() {
            const errors = JSON.parse(localStorage.getItem('germanErrors') || '[]');
            if (errors.length > 0) {
                practiceErrorsBtn.innerHTML = `üîÑ Procviƒçit chyby (${errors.length})`;
            } else {
                practiceErrorsBtn.innerHTML = 'üîÑ Procviƒçit chyby';
            }
        }

        function startErrorPractice() {
            const errors = JSON.parse(localStorage.getItem('germanErrors') || '[]');
            if (errors.length === 0) {
                alert('Nem√°te ≈æ√°dn√© ulo≈æen√© chyby k procviƒçov√°n√≠!');
                return;
            }
            currentQuestions = errors;
            startPractice();
        }

        function startRegularPractice() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            if (checkboxes.length === 0) {
                alert('Vyberte alespo≈à jednu sekci!');
                return;
            }

            currentQuestions = [];
            checkboxes.forEach(checkbox => {
                const sectionQuestions = questionData[checkbox.value] || [];
                currentQuestions.push(...sectionQuestions);
            });

            // Shuffle questions
            currentQuestions = shuffleArray(currentQuestions);
            startPractice();
        }

        function startPractice() {
            currentQuestionIndex = 0;
            correctAnswers = 0;
            incorrectAnswers = 0;
            userAnswers = [];
            
            homepage.classList.add('hidden');
            resultsPage.classList.add('hidden');
            practicePage.classList.remove('hidden');
            
            showQuestion();
        }

        function showQuestion() {
            if (currentQuestionIndex >= currentQuestions.length) {
                showResults();
                return;
            }

            const question = currentQuestions[currentQuestionIndex];
            const progress = ((currentQuestionIndex / currentQuestions.length) * 100);
            progressFill.style.width = progress + '%';

            questionContainer.innerHTML = '';
            nextBtn.classList.add('hidden');
            submitBtn.classList.remove('hidden');

            const questionEl = document.createElement('div');
            questionEl.className = 'question';
            questionEl.textContent = question.question;
            questionContainer.appendChild(questionEl);

            if (question.type === 'multiple') {
                createMultipleChoice(question);
            } else if (question.type === 'input') {
                createInputQuestion();
            } else if (question.type === 'drag') {
                createDragAndDrop(question);
            }
        }

        function createMultipleChoice(question) {
            const optionsEl = document.createElement('div');
            optionsEl.className = 'options';
            optionsEl.id = 'options';

            question.options.forEach((option, index) => {
                const optionEl = document.createElement('div');
                optionEl.className = 'option';
                optionEl.textContent = option;
                optionEl.dataset.index = index;
                optionEl.addEventListener('click', () => selectOption(optionEl, index));
                optionsEl.appendChild(optionEl);
            });

            questionContainer.appendChild(optionsEl);
        }

        function createInputQuestion() {
            const inputEl = document.createElement('input');
            inputEl.type = 'text';
            inputEl.className = 'input-field';
            inputEl.id = 'answerInput';
            inputEl.placeholder = 'Zadejte svou odpovƒõƒè...';
            
            inputEl.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    submitAnswer();
                }
            });
            
            questionContainer.appendChild(inputEl);
            inputEl.focus();
        }

        function createDragAndDrop(question) {
            const wordsContainer = document.createElement('div');
            wordsContainer.innerHTML = '<p style="margin-bottom: 15px;"><strong>P≈ôet√°hnƒõte slova do spr√°vn√©ho po≈ôad√≠:</strong></p>';
            
            const wordsEl = document.createElement('div');
            wordsEl.style.marginBottom = '20px';
            
            // Shuffle words
            const shuffledWords = shuffleArray([...question.words]);
            shuffledWords.forEach(word => {
                const wordEl = document.createElement('span');
                wordEl.className = 'drag-item';
                wordEl.textContent = word;
                wordEl.draggable = true;
                wordEl.addEventListener('dragstart', handleDragStart);
                wordEl.addEventListener('dragend', handleDragEnd);
                wordsEl.appendChild(wordEl);
            });

            const dropZone = document.createElement('div');
            dropZone.className = 'drop-zone';
            dropZone.id = 'dropZone';
            dropZone.innerHTML = '<em>P≈ôet√°hnƒõte slova sem...</em>';
            dropZone.addEventListener('dragover', handleDragOver);
            dropZone.addEventListener('drop', handleDrop);

            wordsContainer.appendChild(wordsEl);
            wordsContainer.appendChild(dropZone);
            questionContainer.appendChild(wordsContainer);
        }

        function selectOption(element, index) {
            document.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
            element.dataset.selected = 'true';
        }

        function submitAnswer() {
            const question = currentQuestions[currentQuestionIndex];
            let userAnswer = null;
            let isCorrect = false;

            if (question.type === 'multiple') {
                const selectedOption = document.querySelector('.option.selected');
                if (!selectedOption) {
                    alert('Vyberte pros√≠m odpovƒõƒè!');
                    return;
                }
                userAnswer = parseInt(selectedOption.dataset.index);
                isCorrect = userAnswer === question.correct;
                
                // Show correct answer
                document.querySelectorAll('.option').forEach((opt, index) => {
                    if (index === question.correct) {
                        opt.classList.add('correct');
                    } else if (opt.classList.contains('selected') && index !== question.correct) {
                        opt.classList.add('incorrect');
                    }
                });
            } else if (question.type === 'input') {
                const input = document.getElementById('answerInput');
                if (!input.value.trim()) {
                    alert('Zadejte pros√≠m odpovƒõƒè!');
                    return;
                }
                userAnswer = input.value.trim().toLowerCase();
                const correctAnswer = question.correct.toLowerCase();
                isCorrect = userAnswer === correctAnswer;
            } else if (question.type === 'drag') {
                const dropZone = document.getElementById('dropZone');
                const droppedWords = Array.from(dropZone.children)
                    .filter(child => child.classList.contains('drag-item'))
                    .map(child => child.textContent);
                
                if (droppedWords.length === 0) {
                    alert('P≈ôet√°hnƒõte slova do spr√°vn√©ho po≈ôad√≠!');
                    return;
                }
                
                userAnswer = droppedWords;
                isCorrect = JSON.stringify(droppedWords) === JSON.stringify(question.correct);
            }

            // Store user answer
            userAnswers.push({
                question: question,
                userAnswer: userAnswer,
                correct: isCorrect
            });

            if (isCorrect) {
                correctAnswers++;
                showFeedback('Spr√°vnƒõ! üéâ', true);
            } else {
                incorrectAnswers++;
                saveError(question);
                let correctText = '';
                if (question.type === 'multiple') {
                    correctText = question.options[question.correct];
                } else if (question.type === 'input') {
                    correctText = question.correct;
                } else if (question.type === 'drag') {
                    correctText = question.correct.join(' ');
                }
                showFeedback(`≈†patnƒõ! ‚ùå<br>Spr√°vn√° odpovƒõƒè: <strong>${correctText}</strong>`, false);
            }

            submitBtn.classList.add('hidden');
            nextBtn.classList.remove('hidden');
        }

        function showFeedback(message, isCorrect) {
            const feedbackEl = document.createElement('div');
            feedbackEl.className = `feedback ${isCorrect ? 'correct' : 'incorrect'}`;
            feedbackEl.innerHTML = message;
            questionContainer.appendChild(feedbackEl);
        }

        function nextQuestion() {
            currentQuestionIndex++;
            showQuestion();
        }

        function saveError(question) {
            let errors = JSON.parse(localStorage.getItem('germanErrors') || '[]');
            
            // Check if this question already exists in errors
            const existingIndex = errors.findIndex(error => 
                JSON.stringify(error) === JSON.stringify(question)
            );
            
            if (existingIndex === -1) {
                errors.push(question);
                localStorage.setItem('germanErrors', JSON.stringify(errors));
            }
        }

        function showResults() {
            practicePage.classList.add('hidden');
            resultsPage.classList.remove('hidden');

            const totalQuestions = currentQuestions.length;
            const percentage = Math.round((correctAnswers / totalQuestions) * 100);

            const statsContainer = document.getElementById('statsContainer');
            statsContainer.innerHTML = `
                <div class="stat">
                    <div class="stat-value">${totalQuestions}</div>
                    <div class="stat-label">Celkem ot√°zek</div>
                </div>
                <div class="stat">
                    <div class="stat-value">${correctAnswers}</div>
                    <div class="stat-label">Spr√°vnƒõ</div>
                </div>
                <div class="stat">
                    <div class="stat-value">${incorrectAnswers}</div>
                    <div class="stat-label">≈†patnƒõ</div>
                </div>
                <div class="stat">
                    <div class="stat-value">${percentage}%</div>
                    <div class="stat-label">√öspƒõ≈°nost</div>
                </div>
            `;

            loadErrorCount();
        }

        function showHomepage() {
            resultsPage.classList.add('hidden');
            practicePage.classList.add('hidden');
            homepage.classList.remove('hidden');
            loadErrorCount();
        }

        // Drag and drop functionality
        let draggedElement = null;

        function handleDragStart(e) {
            draggedElement = e.target;
            e.target.classList.add('dragging');
        }

        function handleDragEnd(e) {
            e.target.classList.remove('dragging');
            draggedElement = null;
        }

        function handleDragOver(e) {
            e.preventDefault();
            e.currentTarget.classList.add('dragover');
        }

        function handleDrop(e) {
            e.preventDefault();
            e.currentTarget.classList.remove('dragover');
            
            if (draggedElement) {
                const dropZone = e.currentTarget;
                
                // Remove placeholder text if present
                if (dropZone.innerHTML.includes('<em>')) {
                    dropZone.innerHTML = '';
                }
                
                // Clone the dragged element
                const clonedElement = draggedElement.cloneNode(true);
                clonedElement.draggable = false;
                clonedElement.style.cursor = 'default';
                
                // Add click to remove functionality
                clonedElement.addEventListener('click', () => {
                    dropZone.removeChild(clonedElement);
                    if (dropZone.children.length === 0) {
                        dropZone.innerHTML = '<em>P≈ôet√°hnƒõte slova sem...</em>';
                    }
                });
                
                dropZone.appendChild(clonedElement);
            }
        }

        // Helper functions
        function shuffleArray(array) {
            const shuffled = [...array];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
        }

        // Add event listener for dragover on drop zone
        document.addEventListener('dragover', (e) => {
            if (e.target.classList.contains('drop-zone')) {
                e.preventDefault();
            }
        });

        document.addEventListener('dragleave', (e) => {
            if (e.target.classList.contains('drop-zone')) {
                e.target.classList.remove('dragover');
            }
        });

        // Initialize the app when DOM is loaded
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
